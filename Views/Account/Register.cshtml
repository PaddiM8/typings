@{
    ViewData["Title"] = "Register";
    Layout = "_Layout";
}

<main class="register">
    <h2>Register</h2>
    @model RegisterViewModel
    <form asp-action="Register" method="post">
        <label asp-for="Username"></label>
        <input asp-for="Username"/>
        <span asp-validation-for="Username" class="error"></span>

        <label asp-for="Password"></label>
        <input asp-for="Password"/>
        <span asp-validation-for="Password" class="error"></span>

        <label asp-for="RepeatPassword"></label>
        <input asp-for="RepeatPassword"/>
        <span asp-validation-for="RepeatPassword" class="error"></span>

        <input type="submit" value="Register"/>
    </form>
</main>
